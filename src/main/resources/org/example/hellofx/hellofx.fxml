<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="320.0" prefWidth="480.0" stylesheets="@hellofx.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hellofx.Controller">
   <top>
      <Label fx:id="helloLabel" alignment="CENTER" contentDisplay="CENTER" text="Hello" textAlignment="CENTER" BorderPane.alignment="CENTER">
      </Label>
   </top>
   <bottom>
      <Button fx:id="changeGreetingButton" alignment="CENTER" mnemonicParsing="false" onAction="#changeGreeting" text="Change greeting" textAlignment="CENTER" BorderPane.alignment="CENTER_RIGHT">
      </Button>
   </bottom>
</BorderPane>
